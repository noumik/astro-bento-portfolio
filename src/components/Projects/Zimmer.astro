---
import ProjectCard from "../ProjectCard/index.astro";
import img from '../../lib/zimmer.webp';
import skillicon1 from '../../lib/icons/Windchill.jpg';
import skillicon2 from '../../lib/icons/SQL.png';

const image = [
  { img: img },
  { skillicon1: skillicon1 },
  { skillicon2: skillicon2 },
]
---

<ProjectCard colSpan="md:col-span-1" rowSpan="md:row-span-2" img={image[0]?.img?.src} backpos="center" opac="0.7" skillicon1={image[1]?.skillicon1?.src} skillicon2={image[2]?.skillicon2?.src} desc='"Designed, developed, & led trainings for a Windchill PLM solution."'>
  <div class="flex justify-between w-full items-start mb-2">
    <div class="flex flex-col">
      <h2 class="text-xl font-bold m-0 z-20">Zimmer Biomet</h2>
      <h2>Product Lifecycle Management</h2>
      <a href="https://sive.rs/nowff" target="_blank">
      </a>
    </div>
  </div>
</ProjectCard>
