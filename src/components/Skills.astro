---
import Card from "./Card/index.astro";

import python from '../../src/lib/icons/Python-Light.svg';
import rlang from '../../src/lib/icons/R-Dark.svg';
import sql from '../../src/lib/icons/SQL.png';
import java from '../../src/lib/icons/Java-Light.svg';
import vba from '../../src/lib/icons/VBA.webp';
import html from '../../src/lib/icons/HTML.svg';
import css from '../../src/lib/icons/CSS.svg';
import js from '../../src/lib/icons/JavaScript.svg';
import csharp from '../../src/lib/icons/C-Sharp.png';
import php from '../../src/lib/icons/PHP-Light.svg';
import qgis from '../../src/lib/icons/QGIS.png';
import tableau from '../../src/lib/icons/Tableau.svg';
import sas from '../../src/lib/icons/SAS.webp';
import git from '../../src/lib/icons/Git.png';
import azure from '../../src/lib/icons/Azure.png';

const image = [
  { python: python },
  { rlang: rlang },
  { sql: sql },
  { java: java },
  { vba: vba },
  { html: html },
  { css: css },
  { js: js },
  { csharp: csharp },
  { php: php },
  { qgis: qgis },
  { tableau: tableau },
  { sas: sas },
  { git: git },
  { azure: azure },
]
---
