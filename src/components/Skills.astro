<style>
  table {
    width: 100%;
    border-collapse: collapse;
    table-layout: fixed;
  }
  th, td {
    border: hidden;
    text-align: center;
    padding: 0px;
    word-wrap: break-word;
    width: 25%;
  }
</style>

<Card colSpan="md:col-span-1" rowSpan="md:row-span-3" title="Skills">
  <p class="text-xs">&nbsp;</p>
  <div class="flex flex-col gap-2">
    <table>
      <tbody>
        <tr>
          <td class="text-xs font-light text-center hover:bg-blue-950"><img src={image[0]?.python?.src} height="100%" width="100%" alt="Python">Python</td>
          <td class="text-xs font-light text-center hover:bg-blue-950"><img src={image[1]?.rlang?.src} height="100%" width="100%" alt="R">R</td>
          <td class="text-xs font-light text-center hover:bg-blue-950"><img src={image[2]?.sql?.src} height="100%" width="100%" alt="SQL">SQL</td>
          <td class="text-xs font-light text-center hover:bg-blue-950"><img src={image[3]?.java?.src} height="100%" width="100%" alt="Java">Java</td>
          <td class="text-xs font-light text-center hover:bg-blue-950"><img src={image[4]?.vba?.src} height="100%" width="100%" alt="VBA">VBA</td>
        </tr>
        <tr>
          <td class="text-xs font-light text-center hover:bg-blue-950"><img src={image[5]?.html?.src} height="100%" width="100%" alt="HTML">HTML</td>
          <td class="text-xs font-light text-center hover:bg-blue-950"><img src={image[6]?.css?.src} height="100%" width="100%" alt="CSS">CSS</td>
          <td class="text-xs font-light text-center hover:bg-blue-950"><img src={image[7]?.js?.src} height="100%" width="100%" alt="JavaScript">JS</td>
          <td class="text-xs font-light text-center hover:bg-blue-950"><img src={image[8]?.csharp?.src} height="100%" width="100%" alt="C#">C#</td>
          <td class="text-xs font-light text-center hover:bg-blue-950"><img src={image[9]?.php?.src} height="100%" width="100%" alt="PHP">PHP</td>
        </tr>
        <tr>
          <td class="text-xs font-light text-center hover:bg-blue-950"><img src={image[10]?.qgis?.src} height="100%" width="100%" alt="QGIS">QGIS</td>
          <td class="text-xs font-light text-center hover:bg-blue-950"><img src={image[11]?.tableau?.src} height="100%" width="100%" alt="Tableau">Tableau</td>
          <td class="text-xs font-light text-center hover:bg-blue-950"><img src={image[12]?.sas?.src} height="100%" width="100%" alt="SAS">SAS</td>
          <td class="text-xs font-light text-center hover:bg-blue-950"><img src={image[13]?.git?.src} height="100%" width="100%" alt="Git">Git</td>
          <td class="text-xs font-light text-center hover:bg-blue-950"><img src={image[14]?.azure?.src} height="100%" width="100%" alt="Azure">Azure</td>
        </tr>
      </tbody>
    </table>
  </div>
</Card>
